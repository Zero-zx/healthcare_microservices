import os
import json
from django.http import JsonResponse
from django.views.decorators.csrf import csrf_exempt
from django.utils.decorators import method_decorator

# ng dn tuyt i ti file KB
KB_PATH = os.path.join(os.path.dirname(os.path.dirname(__file__)), 'kb', 'diseases.json')

with open(KB_PATH, encoding='utf-8') as f:
    KB = json.load(f)

ALL_SYMPTOMS = set()
for disease in KB.values():
    ALL_SYMPTOMS.update(disease['symptoms'])

@csrf_exempt
def chat(request):
    if request.method == 'OPTIONS':
        response = JsonResponse({'detail': 'CORS preflight'})
        response["Access-Control-Allow-Origin"] = "*"
        response["Access-Control-Allow-Methods"] = "POST, OPTIONS"
        response["Access-Control-Allow-Headers"] = "Content-Type"
        return response
    if request.method != 'POST':
        return JsonResponse({'error': 'Ch h tr POST'}, status=405)
    try:
        data = json.loads(request.body)
        history = data.get('history', [])
        # Ly cc triu chng user  xc nhn "C" hoc nhp t do
        user_symptoms = set()
        for msg in history:
            if msg['sender'] == 'user':
                if msg.get('answer', '').lower() == 'c':
                    # Trch xut triu chng t cu hi ca bot m user tr li "C"
                    question_text = msg['text'] # y l cu hi ca bot, v d: "Bn c b ho khng?"
                    if question_text.startswith('Bn c b ') and question_text.endswith(' khng?'):
                        symptom = question_text.replace('Bn c b ', '').replace(' khng?', '')
                        user_symptoms.add(symptom)
                elif not msg.get('answer'): # User nhp t do
                    # Tm cc triu chng c trong text ngi dng nhp
                    for symptom_kb in ALL_SYMPTOMS: # i tn bin  trnh nhm ln
                        if symptom_kb in msg['text'].lower():
                            user_symptoms.add(symptom_kb)

        # Ly cc triu chng user  xc nhn 'Khng'
        negative_symptoms = set([
            msg['text'] for msg in history if msg['sender'] == 'user' and msg.get('answer', '').lower() == 'khng'
        ])
        # Ly cc triu chng  hi
        asked_symptoms = set([
            msg['text'].replace('Bn c b ', '').replace(' khng?', '')
            for msg in history if msg['sender'] == 'bot' and msg['text'].startswith('Bn c b ')
        ])
        # Nu cha c triu chng no, hi triu chng u tin hoc bo khng nhn din c triu chng
        if not user_symptoms:
            # Kim tra nu user  nhp t do nhng khng khp triu chng no
            if any(msg['sender'] == 'user' and not msg.get('answer') and msg['text'].strip() for msg in history):
                response = JsonResponse({"reply": "Ti cha tng nghe triu chng , bn cn gp triu chng no khc khng?", "audio": "Ti cha tng nghe triu chng , bn cn gp triu chng no khc khng?"})
                response["Access-Control-Allow-Origin"] = "*"
                return response
            response = JsonResponse({"reply": "Triu chng bn gp phi l g?", "audio": "Triu chng bn gp phi l g?"})
            response["Access-Control-Allow-Origin"] = "*"
            return response
        # 1. Lc danh sch bnh cn li da trn cc triu chng user  xc nhn
        possible_diseases = []
        for code, disease in KB.items():
            # Loi tr bnh nu user  tr li 'khng' cho bt k triu chng no ca bnh
            if all(sym in disease['symptoms'] for sym in user_symptoms) and not any(sym in disease['symptoms'] for sym in negative_symptoms):
                possible_diseases.append((code, disease))
        if not possible_diseases:
            # Nu khng cn bnh no ph hp, hng dn nhp thm triu chng
            response = JsonResponse({"reply": "Cha  d liu  chn on. Bn hy nhp thm triu chng khc nu c!", "audio": "Cha  d liu  chn on. Bn hy nhp thm triu chng khc nu c!"})
            response["Access-Control-Allow-Origin"] = "*"
            return response
        # Nu ch cn 1 bnh, ch chn on khi   tin cy hoc  hi ht triu chng, nu khng hi tip triu chng cn li
        if len(possible_diseases) == 1:
            code, disease = possible_diseases[0]
            remaining_symptoms = [sym for sym in disease['symptoms'] if sym not in user_symptoms and sym not in asked_symptoms and sym not in negative_symptoms]
            match = len(user_symptoms & set(disease['symptoms']))
            confidence = int(100 * match / len(disease['symptoms']))
            if confidence >= 80 or not remaining_symptoms:
                name = disease['name']
                treatment = disease['treatment']
                reply = f"Bn c th ang b {name} ( tin cy {confidence}%). Khuyn ngh: {treatment}"
                response = JsonResponse({"reply": reply, "audio": reply})
                response["Access-Control-Allow-Origin"] = "*"
                return response
            # Nu cha   tin cy, hi tip triu chng cn li ca bnh ny
            next_symptom = remaining_symptoms[0]
            response = JsonResponse({"reply": f"Bn c b {next_symptom} khng?", "audio": f"Bn c b {next_symptom} khng?"})
            response["Access-Control-Allow-Origin"] = "*"
            return response
        # Nu cn nhiu bnh, hi triu chng phn bit nht
        symptom_count = {}
        for code, disease in possible_diseases:
            for symptom in disease['symptoms']:
                if symptom not in user_symptoms and symptom not in asked_symptoms and symptom not in negative_symptoms:
                    symptom_count[symptom] = symptom_count.get(symptom, 0) + 1
        if not symptom_count:
            # Khng cn triu chng no  hi,  xut nhp thm triu chng t do
            response = JsonResponse({"reply": "Cha  d liu  chn on. Bn hy nhp thm triu chng khc nu c!", "audio": "Cha  d liu  chn on. Bn hy nhp thm triu chng khc nu c!"})
            response["Access-Control-Allow-Origin"] = "*"
            return response
        n = len(possible_diseases)
        best_symptom = min(symptom_count, key=lambda s: abs(symptom_count[s] - n/2))
        response = JsonResponse({"reply": f"Bn c b {best_symptom} khng?", "audio": f"Bn c b {best_symptom} khng?"})
        response["Access-Control-Allow-Origin"] = "*"
        return response
    except Exception as e:
        response = JsonResponse({'error': str(e)})
        response["Access-Control-Allow-Origin"] = "*"
        return response
